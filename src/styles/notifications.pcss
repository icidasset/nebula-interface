@import './colors';


:global .notifications-wrapper {
  bottom: grid(1.5);
  font-size: .85rem;
  line-height: 1.4;
  position: fixed;
  right: grid(1.5);
}


:global .notification {
  background: color(black a(.675));
  border-radius: 3px;
  clear: right;
  color: white;
  cursor: pointer;
  float: right;
  font-weight: 500;
  margin-top: grid(.5);
  opacity: 0;
  padding: 0.55rem .8rem .5rem;
  transition: opacity 500ms;
}


:global .notification-visible {
  opacity: 1;
}


:global .notification-message:before {
  content: "âŒ˜";
  display: inline-block;
  margin-right: grid(1);
  opacity: .75;
  position: relative;
  top: -2px;
  vertical-align: middle;
}


:global .notification-success .notification-message:before {
  color: $green;
}


:global .notification-warning .notification-message:before {
  color: $yellow;
}


:global .notification-error .notification-message:before {
  color: $red;
}


:global .notification-dismiss {
  display: none;
}
