:global .button {
  background: transparent;
  border: 0;
  border-radius: 4px;
  box-shadow: 0 1px 1px 0px rgba(0, 0, 0, 0.175),
              0 -1px 1px 0px rgba(0, 0, 0, 0.05);
  color: $shade-accent;
  cursor: pointer;
  display: inline-block;
  font-size: 0.95rem;
  font-weight: 500;
  letter-spacing: -0.0125em;
  line-height: 1.65;
  margin: 0.75rem 0 0;
  padding: 6px 13px 7px;
  text-decoration: none;

  &:focus {
    outline: 0;
  }

  &[disabled] {
    opacity: .6;
  }


}
