.info {
  font-size: 0.9rem;
  list-style: none;
  margin-bottom: 0;
  margin-top: 1.75rem;
  padding: 0;
}

.info li {
  padding-left: 29px;
  position: relative;

  &[data-info-type="error"] {
    color: #F23427;
  }

  &[data-info-type="success"] {
    color: green;
  }

  :global(.icon) {
    margin-right: 6px;
    vertical-align: middle;
  }

  > span {
    display: inline-block;
    vertical-align: middle;
  }
}
